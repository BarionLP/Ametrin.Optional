<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <NoWarn>$(NoWarn);TUnitAssertions0003</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Ametrin.Optional.Testing.TUnit</PackageId>
    <Version>0.0.2</Version>
    <Authors>Barion</Authors>
    <Company>Ametrin Studios</Company>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE" Pack="true" PackagePath="" />
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="TUnit.Assertions" Version="0.18.60" />
    <PackageReference Include="Ametrin.Optional" Version="0.0.1" />
  </ItemGroup>

</Project>
